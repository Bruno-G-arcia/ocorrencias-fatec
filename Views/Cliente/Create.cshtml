@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Views/LayoutL.cshtml";
}

<div class="CadastroContainer">
    <form asp-controller="Cliente" asp-action="Create" method="POST">
        <div>
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" name="Nome"/>
            <span asp-validation-for="Nome"></span>
        </div>
        <div>
            <label>CPF</label>
            <input type="text" class="form-control" name="CPF" />
        </div>
        <div>
            <label>Telefone</label>
            <input type="text" class="form-control" name="Telefone" />
        </div>

        <div>
            <label>Email</label>
            <input type="text" class="form-control" name="Email" />
        </div>

        <div>
            <label>Senha</label>
            <input type="text" class="form-control" name="Senha" />
        </div>

        <button class="btn btn-primary" style="margin-top: 20px">Salvar</button>
    </form>
</div>
