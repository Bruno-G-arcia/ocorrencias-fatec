@using OcorrenciasWeb.Models

@{
    Layout = "/Views/Layout.cshtml";
    var idOcorrencia = "0";
    if(ViewBag.IdOcorrencia != null){
        idOcorrencia = ViewBag.IdOcorrencia;
    }
    
}
<form action="/OrdemServico/Create" method="POST">
    <div>
        <label>Titulo</label>
        <input type="text" class="form-control" name="Titulo"/>
    </div>

   <div>
        <label>Descricao</label>
        <textarea name="Descricao" class="form-control"></textarea>
    </div>

   <div>
        <label>Status</label>
        <select name="Status" id="Status">
            <option value="Suporte">Suporte</option>
            <option value="Desenvolvimento">Desenvolvimento</option>
            <option value="Q.A.">Q.A.</option>
            <option value="Finalizada">Finalizada</option>
        </select>
    </div>

    <div>
        <label>Ocorrencia</label>
        <input readonly type="number" name="IdOcorrencia" class="form-control" value="@ViewBag.IdOcorrencia"/>
    </div>


    <button class="btn btn-primary" style="margin-top: 20px">Salvar</button>
</form>
