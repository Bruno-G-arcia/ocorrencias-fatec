@using OcorrenciasWeb.Models
@{
  Layout = "/Views/Layout.cshtml";
}
<div class="HomeContainer">
  <table class="table table-hover">
    <tr>
      <th>Ocorrencia</th>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Abertura</th>
      <th>Prazo</th>
      <th>Status</th>
    </tr>
    <tr>
      <td>@ViewBag.IdOcorrencia</td>
      <td>@ViewBag.OcTitulo</td>
      <td>@ViewBag.OcDescricao</td>
      <td>@ViewBag.OcAbertura.ToString("dd/MM/yyyy")</td>
      <td>@ViewBag.OCPrazo.ToString("dd/MM/yyyy")</td>
      <td>@ViewBag.OcStatus</td>
    </tr>
  </table>


  <table class="table table-hover">
    <tr>
      <th>OrdemServico</th>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Funcionario</th>
    </tr>
    @if (Model != null)
    {
      @foreach (OrdemServico o in Model)
      {
        <tr>
          <td></td>
          <td>@o.Titulo</td>
          <td>@o.Descricao</td>
          <td>@o.NomeFuncionario</td>
        </tr>
      }
    }

  </table>

</div>