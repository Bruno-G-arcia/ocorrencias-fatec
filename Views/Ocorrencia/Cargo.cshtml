@using OcorrenciasWeb.Models
@{
  Layout = "/Views/Layout.cshtml";
}

<h3>Ocorrencias:</h3>
<table class="table table-hover">
  <tr>
    <th>Ocorrencia</th>
    <th>Titulo</th>
    <th>Abertura</th>
    <th>Prazo</th>
    <th>Status</th>
    <th>Prioridade</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  @if (Model != null)
  {
    @foreach (Ocorrencia o in Model)
    {

      <tr>
        <td>@o.IdOcorrencia</td>
        <td>@o.Titulo</td>
        <td>@o.Abertura.ToString("dd/MM/yyyy")</td>
        <td>@o.Prazo.ToString("dd/MM/yyyy")</td>
        <td>@o.Status</td>
        <td>@o.Prioridade</td>
        <td>
          <a href="/OrdemServico/Detalhes?idOcorrencia=@o.IdOcorrencia">Detalhes</a>
        </td>
        <td>
          <a href="/Ocorrencia/Update/@o.IdOcorrencia">Editar</a>
        </td>
        <td>
          <a href="/Ocorrencia/Delete/@o.IdOcorrencia">Excluir</a>
        </td>
      </tr>

    }
  }

</table>

