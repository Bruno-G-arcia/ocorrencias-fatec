@using OcorrenciasWeb.Models
@{
    Layout = "/Views/Layout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th>Ocorrencia</th>
        <th>Titulo</th>
        <th>Prioridade</th>
        <th>Abertura</th>
        <th>Prazo</th>
    </tr>
    @if(Model != null){
      @foreach(Ocorrencia o in Model)
      {
        <tr>
          <td>@o.IdOcorrencia</td>
          <td>@o.Titulo</td>
          <td>@o.Prioridade</td>
          <td>@o.Abertura.ToString("dd/MM/yyyy")</td>
          <td>@o.Prazo.ToString("dd/MM/yyyy")</td>
          <td>
            <a href="/Ocorrencia/Delete/@o.IdOcorrencia">Apagar</a>
            <a href="/Ocorrencia/Update/@o.IdOcorrencia">Editar</a>
          </td>
        </tr>
      }
    }
    
</table>

<a href="/Ocorrencia/Create" class="btn btn-primary">Adicionar</a>
